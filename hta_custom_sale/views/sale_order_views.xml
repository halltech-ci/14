<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">Sale Order Secondary Unit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='price_subtotal']"
                position="after"
            >
                <field
                    name="secondary_uom_qty"
                    string="Conversion Unit Qty"
                    class="oe_inline oe_no_button"
                    attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"
                />
                <field
                    name="secondary_uom_id"
                    string="Conversion Unit"
                    class="oe_inline"
                    domain="[('product_tmpl_id.product_variant_ids', 'in', [product_id])]"
                    attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']"
                position="before"
            >
                <field
                    name="secondary_uom_qty"
                    string="Conversion Unit Qty"
                    attrs="{'readonly': [('parent.state', 'in', ('done', 'cancel'))]}"
                />
                <field
                    name="secondary_uom_id"
                    string="Conversion Unit"
                    domain="[('product_tmpl_id.product_variant_ids', 'in', [product_id])]"
                    options="{'no_create': True}"
                    attrs="{'readonly': [('parent.state', 'in', ('done', 'cancel'))]}"
                />
            </xpath>
            </field>
        </record>
            <record id="view_order_form_inherit" model="ir.ui.view">
                <field name="name">Sale Order custom view</field>
                <field name="model">sale.order</field>
                <field name="inherit_id" ref="sale.view_order_form" />
                <field name="arch" type="xml">
                    <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                        <field name="sale_order_recipient"/>
                        <field name='project_key'/>
                    </xpath>
                    <xpath expr="//sheet/group/group" position="inside">
                        <field name="project_id"/>
                        <field name="client_order_ref"/>
                    </xpath>
                    <xpath expr="//sheet/group" position="after">
                      <group>
                          <field name="description"/>
                      </group>
                    </xpath>
                </field>
            </record>
        
</odoo>