<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_project_task_form_material" model="ir.ui.view">
        <field name="name">project.task.form.material</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="product_used" string="Product" groups="project.group_project_user">
                    <field name="material_ids">
                        <tree string="Product Used" editable="top">
                            <field name ="product_code"/>
                            <field name="product_id" />
                            <field name="initial_qty" />
                            <field name="quantity" />
                            <field name="qty_used" />
                        </tree>
                    </field>
                </page>
                
                <page name="equipment_used" string="Equipments" groups="project.group_project_user">
                    <field name="equipment_ids">
                        <tree string="Equipment Used" editable="top">
                            <field name ="equipment_id"/>
                            <field name="equipment_category"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    
    <record id="edit_project_consume_material" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='settings']/group/group[2]" position="before">
                <group string="Locations to consume" name="materials" groups="stock.group_stock_multi_locations">
                    <field name="location_source_id"/>
                    <field name="location_dest_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>